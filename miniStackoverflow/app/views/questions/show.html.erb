
<h1>title: <%= @question.title %></h1>
<p>Content: <%= @question.content %></p>
<p>User: <%= @question.user %></p>


Votes: <strong><%=  Vote.counter(@question.votes) %> </strong>
<%= link_to "+", up_vote_question_path(@question.id), method: "post", class: "btn btn-success btn-sm" %>
<%= link_to "-", down_vote_question_path(@question.id), method: "delete", class: "btn btn-danger btn-sm" %>

<h4>Anwers:</h4>

<% @answers.each do |answer| %>
  <%= answer.title %><br>
  <%= answer.content %><br>
  <small>by: <%= answer.content %><br></small>
<% end %>


<h4>write an answer:</h4>

<%= form_for @answer do  |f| %>
<p>
  <%= f.label :title  %><br>
  <%= f.text_field :title  %>
</p>
<p>
  <%= f.label :content %><br>
  <%= f.text_area :content  %>
</p>
<p>
  <%= f.label :user ,"Ansering" %><br>
  <%= f.text_field :user  %>
  <%= f.hidden_field :question_id, :value => "#{@question.id}" %>
</p>
<p>
  <%= f.submit "Send" %>
</p>
<% end %>

<%= link_to "delete", question_path(@question.id), method: :delete, data: {confirm: "Are you to delete the question ?"}  %>
<%= link_to "Edit", edit_question_path(@question.id) , class: "btn btn-default" %>
<%= link_to "Back to all Questions", questions_path , class: "btn btn-default" %>
