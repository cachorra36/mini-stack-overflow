
<h1><%= @question.title %></h1>

<p><%= @question.description %></p>

<h1>Answers:</h1>
<p>
  <button class="btn btn-default">
    <%= link_to "New Answer", new_question_answer_path(@question) %>  
  </button>
</p>
<table class="table" id="answers">
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Description</th>
      <th>Votes</th>
      <th colspan='2'></th>
    </tr>
  <% @question.answers.each do |answer| %>
    <tr>
      <td><%= answer.votes.all.sum(:value) %></td>
      <td><%= answer.title %></td>
      <td><%= answer.description %></td>
      <td> 
          <a href=<%= upvote_question_answer_path(@question.id, answer) %>>
          <button type="button" class="btn btn-default btn-md">
           <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
          </button>
        </a>
        <a href=<%= downvote_question_answer_path(@question.id, answer) %>>
          <button type="button" class="btn btn-default btn-md">
            <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
          </button>
        </a>
      </td>
      <td>Edit</td>
      <td>Destroy</td>
    </tr>
  <% end %>
</table>  

<button type="button" class="btn btn-default">
  <a href= <%= edit_question_path(@question.id) %>>Edit question</a>
</button>
<button type="button" class="btn btn-default">
  <%= link_to 'Delete question', question_path(@question.id), method: :delete, 
    data: {confirm: "Are you sure?"} %>
</button>
<button class="btn btn-default">
  <%= link_to 'Back', questions_path %>
</button>
