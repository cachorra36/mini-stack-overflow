<h1>
	<%= @question.title %>
</h1>
<hr>
<h4 class="col-md-5">
	<%= @question.content %>
</h4>
<h3>Add a new answer</h3>

<div>
	<%= render "answers/form" %>
</div>

<hr>

<h3>Answers</h3>
<table class="table table-striped">
  <thead>
    <th class="col-md-2">Title</th>
    <th class="col-md-6">Content</th>
    <th class="col-md-1">Votes</th>
    <th class="col-md-1">Vote</th>
    <th class="col-md-2">Action</th>
  </thead>

	<tbody>

		<% @answers.each do |answer| %>
			<tr>
			<td><%= answer.title %></td>
			<td><%= answer.content %></td>
			<td><%= pluralize(answer.votes.count, "vote") %></td>
			<td>
          <%= button_to  upvote_answer_path(answer), method: :post, :class => "btn btn-sm
          	btn-success" do %>
          <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
          <% end %>
          <%= button_to downvote_answer_path(answer), method: :delete, :class =>  "btn btn-sm
          	btn-danger" do %>
          <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
          <% end %>
        </td>
			<td><%= link_to "Edit", edit_answer_path(answer) %> <%= link_to "Delete",answer_path(answer), method: :delete  %></td>
			</tr>
		<% end %>

	</tbody>
</table>
<br>
