
<h2>Questions</h2>

	<%= render "form" %>

  <h3>Current questions</h3>

<table class="table table-striped">
  <thead>
    <th class="col-md-2">Title</th>
    <th class="col-md-1"># Answers</th>
    <th class="col-md-5">Content</th>
    <th class="col-md-1">#Votes</th>
    <th class="col-md-1">Vote</th>
    <th class="col-md-1">Action</th>
  </thead>

  <tbody>
  	<% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.title, question_path(question) %></td>
        <td class="text-center"><%= question.answers.count %> </td>
        <td><%= question.content %></td>
        <td><%= pluralize(question.votes.count, "vote") %></td>
        <td>
          <%= button_to upvote_question_path(question), method: :post, :class => "btn btn-sm btn-success" do %>
          <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
          <% end %> 
          <%= button_to downvote_question_path(question), method: :delete, :class => "btn btn-sm btn-danger" do %>
          <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_question_path(question) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
          <%= link_to  question_path(question), method: :delete  do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>

      </tr>
  	<% end %>


  </tbody>
</table>

