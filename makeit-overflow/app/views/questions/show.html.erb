<h1>
	<%= @question.title %>
</h1>
<hr>
<h4 class="col-md-5">
	<%= @question.content %>
</h4>
<h3>Add a new answer</h3>

<div>
	<%= render "answers/form" %>
</div>

<hr>

<h3>Answers</h3>
<table class="table table-striped">
  <thead>
    <th class="col-md-2">Title</th>
    <th class="col-md-6">Content</th>
    <th class="col-md-1">Votes</th>
    <th class="col-md-1">Vote</th>
    <th class="col-md-2">Action</th>
  </thead>

	<tbody>

		<% @answers.each do |answer| %>
			<tr>
			<td><%= answer.title %></td>
			<td><%= answer.content %></td>
			<td><%= pluralize(answer.votes.count, "vote") %></td>
			<td>
          <%= button_to '+1', upvote_question_answer_path(answer.question.id, answer), method: :post, :class => "btn btn-sm" %>
          <%= button_to '-1', downvote_question_answer_path(answer.question.id, answer), method: :post, :class => "btn btn-sm" %>
        </td>
			<td><%= link_to "Edit", edit_question_answer_path(answer.question.id, answer) %> <%= link_to "Delete", question_answer_path(answer.question.id, answer), method: :delete  %></td>
			</tr>
		<% end %>

	</tbody>
</table>
<br>
