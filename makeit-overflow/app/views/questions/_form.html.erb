<div class="form-group">
  <div class="container">
    <div class="well col-md-5">
      <%= form_for @question do|f| %>

      <p>
      	<%= f.label :title %>
      	<%= f.text_field :title, class:"form-control" %>
      </p>

      <p>
      	<%= f.label :content %><br>
      	<%= f.text_area :content, class:"form-control" %>

      </p>
      <p>

      	<%= f.button :submit => "", class:'btn btn-success' %>
      </p>
      <% end %>
    </div>
  </div>
</div>